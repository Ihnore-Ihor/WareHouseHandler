<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<DialogPane fx:id="productDialog" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.coursework.ProductDialogController">
    <content>
        <GridPane hgap="10" vgap="10" alignment="center">
            <!-- Назва продукту -->
            <Label text="Назва продукту:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="productNameInput" promptText="Назва" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Тип продукту -->
            <Label text="Тип продукту:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="productTypeInput" promptText="Тип" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Кількість одиниць -->
            <Label text="Кількість одиниць:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="productUnitsInput" promptText="Кількість одиниць" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Дата виготовлення -->
            <Label text="Дата виготовлення:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <DatePicker fx:id="productDateInput" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <!-- Термін придатності -->
            <Label text="Термін придатності:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <DatePicker fx:id="productExpirationInput" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <!-- Ціна за одиницю -->
            <Label text="Ціна за одиницю:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="productPriceInput" promptText="Ціна" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <!-- Поле для повідомлення про помилки -->
            <Label fx:id="errorLabel" text="" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-text-fill: red;"/>
        </GridPane>
    </content>
</DialogPane>